datasource db {
provider = "sqlite"
url      = env("DATABASE_URL")
}

generator client {
provider = "prisma-client-js"
}

model User {
userId    String   @id
createdAt String
jobs      Job[]
}

model Job {
jobId       Int      @id @default(autoincrement())
userId      String
sdfFilePath String
xyzFilePath String?
parameters  String
energy      Float?
status      String
retryCount  Int      @default(0)
createdAt   String
completedAt String?
user        User     @relation(fields: [userId], references: [userId])
@@index([status, createdAt])
}

